<h1>It's Burgers Thyme!</h1>

<div class="col-6">
    <h2>Burgers that have not been devoured!</h2>

    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-6">
    
    <h2>Burgers that are devoured!</h2>

    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devour=false}}
            {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="brgr">Burger Name:</label>
        <input type="text" id="brgr" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>